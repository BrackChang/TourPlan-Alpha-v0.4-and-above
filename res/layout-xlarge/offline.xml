<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/slidingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/OffLineHeader"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:animateLayoutChanges="true"
            android:background="@drawable/title_bg1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp" >

            <TextView
                android:id="@+id/UserName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:onClick="userNameClick"
                android:text="0.0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@drawable/Brown"
                android:textStyle="bold" />

            <View
                android:id="@+id/headerLineA"
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/UserName2"
                android:background="@drawable/Gray" />

            <View
                android:id="@+id/headerLineB"
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/UserName2"
                android:background="@drawable/Gray" />
        </RelativeLayout>

        <View
            android:id="@+id/Line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Nameï¼š"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/userNameSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>