<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <ImageButton
         android:id="@+id/PlanDeleteBtn"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="6dp"
         android:background="@drawable/button_style03"
         android:onClick="planDeleteClick"
         android:scaleType="centerCrop"
         android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/offlinePlanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/PlanDeleteBtn"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@drawable/Orange"
        android:textSize="30sp" >

    </TextView>

    <TextView
        android:id="@+id/offlinePlanInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/offlinePlanText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/Ivory"
        android:textSize="24sp" >

    </TextView>

</RelativeLayout>