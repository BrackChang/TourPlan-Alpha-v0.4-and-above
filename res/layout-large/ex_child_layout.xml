<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android1:background="@drawable/AliceBlue" >
    
    <View
        android1:id="@+id/exLine0"
        android1:layout_width="fill_parent"
        android1:layout_height="1dp"
        android1:layout_alignParentTop="true"
        android1:background="@drawable/Gray" />
    
      <LinearLayout
        android1:id="@+id/dtLayout"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/exLine0" >

        <TextView
            android1:id="@+id/durationInfo"
            android1:layout_width="0dp"
            android1:layout_height="match_parent"
            android1:layout_weight="1"
            android1:background="@drawable/PaleGreen"
            android1:paddingLeft="5dp"
            android1:textSize="26sp" />

        <TextView
            android1:id="@+id/transportationInfo"
            android1:layout_width="0dp"
            android1:layout_height="match_parent"
            android1:layout_weight="2"
            android1:background="@drawable/SkyBlue"
            android1:paddingLeft="5dp"
            android1:textSize="26sp" />

    </LinearLayout>
 
    <TextView
        android:id="@+id/spotInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android1:layout_below="@+id/dtLayout"
        android:textSize="24sp" />
    
    <View
        android:id="@+id/exLine1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android1:layout_below="@+id/spotInfo"
        android:background="@drawable/Gray" />

    <ImageView
        android:id="@+id/spotImage1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/exLine1"
        android1:layout_marginLeft="3dp"
        android:src="@drawable/tour_icon" />

    <ImageView
        android:id="@+id/spotImage2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/exLine1"
        android:layout_toRightOf="@+id/spotImage1"
        android1:layout_marginLeft="5dp"
        android:src="@drawable/tour_icon" />

    <ImageButton
        android:id="@+id/imageDownloadBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android1:layout_below="@+id/exLine1"
        android1:layout_marginRight="3dp"
        android1:layout_marginTop="3dp"
        android:src="@android:drawable/stat_sys_download"
        android1:background="@drawable/button_style01"
        android1:scaleType="centerCrop" />

    <ImageButton
        android1:id="@+id/imageDeleteBtn"
        android1:layout_width="60dp"
        android1:layout_height="60dp"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/imageDownloadBtn"
        android1:layout_marginBottom="3dp"
        android1:layout_marginRight="3dp"
        android1:background="@drawable/button_style03"
        android1:scaleType="fitCenter"
        android1:src="@drawable/menu_delete"
        android1:visibility="gone" />
 
</RelativeLayout>
